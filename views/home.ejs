<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <!-- <%- include('_header'); %> -->

        <h1>Codial | <%= title %></h1>

        <!-- <%- include('_footer'); %> -->
         
        <!-- Our home page will be the page where we can post our Posts -->

        <section id="feed-posts">
            <h2>Posts</h2>
            <form action="/posts/create" id="new-post-forms" method="POST">
                <textarea name="content" id="" cols="30" rows="3" placeholder="Type anything you want ..."></textarea>
                <input type="submit" value="Post">
            </form>
            <!-- to print the posts in the home -->
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <li>
                        <p>
                        <%= post.content %> <br>
                        <small>
                            <!-- to show the name of each user -->
                            Name:<%= post.user.name %>
                        </small>
                        </p>
                    </li>
                        
                    <%} %>
                </ul>
            </div>
        </section>
    </body>

</html>