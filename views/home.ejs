<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <!-- <%- include('_header'); %> -->

        <h1>Codial | <%= title %></h1>

        <!-- <%- include('_footer'); %> -->
         
        <!-- Our home page will be the page where we can post our Posts -->

        <section id="feed-posts">
            <h2>Posts</h2>
            <!-- To display this people only to those people who have signed in -->
            <% if(locals.user) { %>

            <form action="/posts/create" id="new-post-forms" method="POST">
                <textarea name="content" id="" cols="30" rows="3" placeholder="Type anything you want ..." required></textarea>
                <input type="submit" value="Post">
            </form>

            <% } %>
            <!-- to print the posts in the home -->
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <li>
                        <p>
                        <%= post.content %> <br>
                        <small>
                            <!-- to show the name of each user -->
                            Name:<%= post.user.name %>
                        </small>
                        </p>
                        <div class="post-comments">

                            <% if (locals.user) { %>
                                <form action="/comments/create" method="POST">
                                    <input type="text" name="content" placeholder="Type here to add Comment..." required>
                                    <input type="hidden" name="post" value="<%= post._id %>">
                                    <input type="submit" value="Add Comment">
                                </form>

                            <% } %>
                            <div class="post-comments-list">
                                
                                <ul id="post-comments-<%= post._id %>">
                                    <% for(comment of post.comments) { %>
                                        <p>
                                            <%= comment.content %> 
                                            <br>
                                            <small>
                                                <%= comment.user.name %>
                                            </small>
                                        </p>
                                    <% } %>
                                </ul>

                            </div>    

                        </div>
                    </li>
                        
                    <%} %>
                </ul>
            </div>
        </section>
    </body>

</html>